---
import GuestIntroduction from '@/libs/GuestIntroduction';
import Header1 from '@/libs/headers/Header1';

import type { Person } from '@/libs/stores/people';

type Props = {
  guests: Person[];
};

const { guests } = Astro.props;
---

<section class="mt-96 md:mt-72" id="guests">
  <Header1 title="GUESTS" titleJa="ゲスト" className="mb-16" right />

  <ul class="pt-8 px-8 md:px-16 w-full flex flex-col gap-8">
    {guests.map((guest) => (
      <GuestIntroduction
        stillPhotographyUrl={guest.still_photography!.url}
        name={guest.name}
        positions={guest.positions}
        description={guest.introduction}
      />
    ))}
  </ul>
</section>
