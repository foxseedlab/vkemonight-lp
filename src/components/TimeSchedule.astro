---
import FeaturedImage from '@/libs/FeaturedImage';
import ScheduleArea from '@/libs/Schedule';
import Wave from '@/libs/Wave.astro';
import Header1 from '@/libs/headers/Header1';

import type { Schedule } from '@/libs/stores/schedules';

type Props = {
  djSchedules: Schedule[];
};

const { djSchedules } = Astro.props;
---

<section class="mt-96 md:mt-72" id="timeschedule">
  <div class="-mb-1 w-full text-secondary-background">
    <Wave />
  </div>

  <div class="py-48 md:py-32 text-secondary bg-secondary-background">
    <Header1 title="TIME<br>SCHEDULE" titleJa="タイムスケジュール" className="mb-16" small />

    <div class="flex flex-col md:flex-row">
      <div class="mb-20 md:mb-0 px-6 md:px-12 w-full md:w-1/2 flex flex-col items-center">
        <div class="w-full text-left font-medium">
          現時点の予定です。変更になる場合がございます。
        </div>

        <ScheduleArea djSchedules={djSchedules} />
      </div>

      <FeaturedImage imageSrc="" />
    </div>
  </div>

  <div class="-mt-1 w-full text-secondary-background rotate-180">
    <Wave />
  </div>
</section>
